<h3 class = "text-center">Admin Login</h3>

<div class = "container">
  
  

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class = "row">

  <div class="col-3">
    <%= f.label "メールアドレス", class: 'col-form-label' %>
  </div>
  <div class = "col-6">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control my-2' %>
  </div>
  <div class = "col-3"></div>

  <div class="col-3">
    <%= f.label "パスワード", class: 'col-form-label' %>
  </div>
  <div class = "col-6">
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control my-2' %>
  </div>
  <div class = "col-3"></div>

  <% if devise_mapping.rememberable? %>
    <div class="col-3"></div>
    <div class= "col-9">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  
  </div>

  <div class="text-center">
    <%= f.submit "ログイン", class: "btn btn-primary my-3" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>



</div>