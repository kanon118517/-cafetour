<h3 class = "text-center my-3">User</h3>

<div class = "container">

   <div class = "text-center">

  <div class = "row">

    <div class = "col-3"></div>
    <div class = "col-6">

       <table class="table">
        <thead>
            <tr>

              <th scope="col">name</th>
              <th scope="col">mail address</th>
              <th scope="col">status</th>

            </tr>
         </thead>
    <tbody>

        <tr>

        <% @users.each do |user| %>

        <td>
          <%= link_to user.name, admin_user_path(user.id) %>
        </td>

        <td>
          <%= user.email %>
        </td>

        <td>
         
            <%= user.is_deleted ? "退会":"会員" %>
      
        </td>

         </tr>
    </tbody>

        <% end %>


  </table>

    </div>

    </div>

  </div>

</div>