<h3 class = "text-center">Cafe 編集</h3>
<div class = "container">

<%= form_with model: @cafe do |f| %>

<div class = "row">
    <div class = "col-5">
      <label class = "col-form-label">カフェ名</label>
          <%= f.text_field :cafe_name, class: 'form-control' %>
    </div>
</div>

 <div class = "row">
    <div class = "col-5">
      <label class = "col-form-label">カフェ住所</label>
          <%= f.text_field :address, class: 'form-control' %>
    </div>
</div>


  <div class = "row">
    <div class = "col">
      <div class="check_box">
        <label class = "col-form-label">エリアタグ</label>
            <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
         <div>
           <%= tag.label do %>
             <%= tag.check_box %>
             <%= tag.text %>
           <% end %>
         </div>
       <% end %>
       </div>
      </div>
 </div>


  <%= f.submit '保存', class: "btn btn-success" %>

<% end %>

</div>