<h2 class = "text-center">新規登録</h2>

<div class="container">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row g-3 align-items-center">
    <div class = "col-auto">
      <%= f.label "ユーザー名", class: 'col-form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="row g-3 align-items-center">
    <div class = "col-auto">
      <%= f.label "メールアドレス", class: 'col-form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
  </div>

  <div class="row g-3 align-items-center">
    <div class = "col-auto">
      <%= f.label "パスワード", class: 'col-form-label' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> ケタ以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>
  </div>

  <div class="row g-3 align-items-center">
    <div class = "col-auto">
      <%= f.label "パスワード(確認用)", class: 'col-form-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>
  </div>
<br>
  <div class="row g-3 alin-items-center">
    <div class = "col-auto">
      <%= f.submit "新規登録",class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "public/shared/links" %>

</div>