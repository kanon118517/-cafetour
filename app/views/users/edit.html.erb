<h3 class = "text-center">Edit Profile</h3>

<div class = "container">


   <%= form_with model: @user do |f| %>
  
    <div class = "row">
      
      <div class = "col-2"></div>
      <div class = "col-2">
        <label class = "col-form-label">Name</label>
      </div>
      <div class = "col-6">
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: 'form-control my-2' %>
      </div>
      <div class = "col-2"></div>

      <div class = "col-2"></div>
      <div class = "col-2">
        <label class = "col-form-label">Introduction</label>
      </div>
      <div class = "col-6">
        <%= f.text_area :introduction, class: 'form-control my-2' %>
      </div>
      <div class = "col-2"></div>
      
      <div class = "col-2"></div>
      <div class = "col-2">
        <label class = "col-form-label">ProfileImage</label>
      </div>
      <div class = "col-6">
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "my-2" %>
      </div>
      <div class = "col-2"></div>
      
      </div>
  
       <div class = "text-center">
          <%= f.submit "変更を保存", class: "btn btn-success my-5" %>
       </div>
    <% end %>

</div>